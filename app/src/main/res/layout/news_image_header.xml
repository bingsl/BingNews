<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_theme_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--顶部图片-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <ImageView
            android:id="@+id/iv_theme_news_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_theme_news_title"
            style="@style/top_text_in_viewpager"
            android:layout_alignBottom="@+id/iv_theme_news_bg" />
    </RelativeLayout>
    <!--推荐者-->
    <LinearLayout
        android:id="@+id/layout_theme_editor"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/editor"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <GridView
            android:id="@+id/gridview_header_editor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:numColumns="9" />
    </LinearLayout>
</LinearLayout>